<section class="index-wrapper">
  <h2>All Memos</h2>
  <ul>
    <% @memos.each do |memo| %>
    <li class="index-item">
      <article>
        <h3>Title: <a href="/memos/<%= memo[:id] %>"><%= memo[:title] %></a></h3>
        <p><%= memo[:content] %><p>
      </article>
    </li>
    <% end %>
  </ul>
</section>
<nav class="index-nav">
  <a href="/memos/new">New Memo</a>
</nav>
